<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.TaoDiaChi">
    //1
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back">
        </ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo địa chỉ"
            android:textStyle="bold"
            android:textSize="40dp"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp">
        </TextView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="700dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            //1
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#D3D4D5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Địa chỉ*"
                    android:textSize="25sp"
                    android:paddingTop="15sp"
                    android:paddingLeft="20sp">
                </TextView>
            </LinearLayout>
            //2
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:text="Chọn địa chỉ"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif">
                </TextView>
                <TextView
                    android:id="@+id/bando"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12sp"
                    android:layout_marginLeft="400sp"
                    android:text=">"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="560dp"
                android:layout_height="3dp"
                android:background="#F5F6FA"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3sp">
            </LinearLayout>
            //3
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:text="Tòa nhà, Số tầng (Không bắt buộc)"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif">
                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="560dp"
                android:layout_height="3dp"
                android:background="#F5F6FA"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3sp">
            </LinearLayout>
            //4
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:text="Cổng (Không bắt buộc)"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif">
                </TextView>

            </LinearLayout>
            //5
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#D3D4D5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tên địa chỉ (Không bắt buộc)"
                    android:textSize="25sp"
                    android:paddingTop="15sp"
                    android:paddingLeft="20sp">
                </TextView>
            </LinearLayout>
            //6
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">
                <Button
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/duongtron_nha"
                    android:text="Nhà"
                    android:textSize="22sp">
                </Button>
                <Button
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/duongtron_nha"
                    android:text="Công ty"
                    android:textSize="22sp">
                </Button>
                <Button
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:background="@drawable/duongtron_nha"
                    android:text="Others"
                    android:textSize="22sp">
                </Button>
            </LinearLayout>
            //7
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#D3D4D5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Liên hệ"
                    android:textSize="25sp"
                    android:paddingTop="15sp"
                    android:paddingLeft="20sp">
                </TextView>
            </LinearLayout>
            //8
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:text="Nguyễn Vũ Anh Khoa"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif">
                </TextView>
                <ImageView
                    android:id="@+id/danhba"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="280sp"
                    android:src="@drawable/ic_phone">
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="560dp"
                android:layout_height="3dp"
                android:background="#F5F6FA"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3sp">
            </LinearLayout>
            //9
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:text="0965072230"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif">
                </TextView>
            </LinearLayout>
            //10
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="#D3D4D5">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ghi chú"
                    android:textSize="25sp"
                    android:paddingTop="15sp"
                    android:paddingLeft="20sp">
                </TextView>
            </LinearLayout>
            /11
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:layout_marginLeft="20sp"
                    android:text="Ghi chú"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <Button
            android:layout_width="560dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/duongtron_nha"
            android:text="LƯU"
            android:textSize="22sp">
        </Button>
    </LinearLayout>
</LinearLayout>