<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bk2"
    tools:context=".SignUp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="35dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/anhdd"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">
        </ImageView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="35dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:fontFamily="monospace">
        </TextView>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fullname"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_toRightOf="@id/hinh1"
                android:id="@+id/text_lb1"/>
            <ImageView
                android:layout_marginTop="8dp"
                android:id="@+id/hinh1"
                android:paddingRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/username" />
            <EditText
                android:id="@+id/username"
                android:textColorHint="#F8F8F6"
                android:layout_below="@+id/text_lb1"
                android:layout_toRightOf="@id/hinh1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="User name"
                android:textColor="#fff"
                android:textSize="22sp">
            </EditText>

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_toRightOf="@id/hinh2"
                android:id="@+id/text_lb2"/>
            <ImageView
                android:id="@+id/hinh2"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/password"
                />
            <EditText
                android:id="@+id/password"
                android:textColorHint="#F4F4F2"
                android:layout_below="@+id/text_lb2"
                android:layout_toRightOf="@id/hinh2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:hint="Enter password"
                android:textSize="22sp">
            </EditText>

        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_toRightOf="@id/hinh21"
                android:id="@+id/text_lb21"/>
            <ImageView
                android:id="@+id/hinh21"
                android:layout_marginTop="8dp"
                android:paddingRight="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/password"
                />
            <EditText
                android:id="@+id/repassword"
                android:textColorHint="#F4F4F2"
                android:layout_below="@+id/text_lb21"
                android:layout_toRightOf="@id/hinh21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter confirm password"
                android:textColor="#fff"
                android:textSize="22sp"
                >
            </EditText>

        </RelativeLayout>


        <Button
            android:id="@+id/btnsignup"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#FDFCFC"
            android:background="@drawable/button1"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="@null"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/forgot"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot password"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#EF4848"/>

        <TextView
            android:id="@+id/dangnhap"
            android:layout_below="@+id/forgot"
            android:layout_centerHorizontal="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have account? Sign in now"
            android:textSize="25sp"
            android:textColor="#EDEDE5"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>


    </RelativeLayout>
</LinearLayout>